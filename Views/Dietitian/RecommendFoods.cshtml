@model dynamic
@{
    ViewData["Title"] = "Besin Önerileri";
    var client = ViewBag.Client as NutriSmart.Models.User;
    var safeFoods = ViewBag.SafeFoods as List<NutriSmart.Models.Food>;
    var riskyFoods = ViewBag.RiskyFoods as List<NutriSmart.Models.Food>;
}

<div class="row align-items-center mb-4">
    <div class="col-md-8">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-action="Index">Panel</a></li>
                <li class="breadcrumb-item"><a asp-action="Clients">Danışanlar</a></li>
                <li class="breadcrumb-item active">Besin Önerileri</li>
            </ol>
        </nav>
        <h2 class="mb-0 fw-bold">
            <i class="bi bi-stars text-warning me-2"></i>Besin Önerileri
        </h2>
        <p class="text-muted mt-1">@client.Ad @client.Soyad için alerji durumuna göre hazırlanmış liste</p>
    </div>
    <div class="col-md-4 text-end">
        <button onclick="window.print()" class="btn btn-outline-primary">
            <i class="bi bi-printer me-2"></i>Listeyi Yazdır
        </button>
    </div>
</div>

<div class="row g-4">
    <!-- Safe Foods -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-success bg-opacity-10 border-0 py-3">
                <h5 class="mb-0 text-success fw-bold">
                    <i class="bi bi-check-circle-fill me-2"></i>Güvenli Besinler
                </h5>
            </div>
            <div class="card-body p-0">
                @if (safeFoods != null && safeFoods.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var food in safeFoods)
                        {
                            <div class="list-group-item d-flex align-items-center p-3">
                                <div class="flex-shrink-0 me-3">
                                    @if (!string.IsNullOrEmpty(food.ResimYolu))
                                    {
                                        <img src="~/images/foods/@food.ResimYolu" class="rounded" width="50" height="50" style="object-fit: cover;" alt="@food.Ad">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted" style="width: 50px; height: 50px;">
                                            <i class="bi bi-egg-fried fs-4"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold">@food.Ad</h6>
                                    <small class="text-muted">@food.Kalori kcal - @food.Icerik</small>
                                </div>
                                <span class="badge bg-success-subtle text-success rounded-pill">Güvenli</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center p-5 text-muted">
                        <i class="bi bi-inbox fs-1 mb-2 d-block"></i>
                        Liste boş.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Risky Foods -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
                <h5 class="mb-0 text-danger fw-bold">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i>Riskli Besinler
                </h5>
            </div>
            <div class="card-body p-0">
                @if (riskyFoods != null && riskyFoods.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var food in riskyFoods)
                        {
                            <div class="list-group-item d-flex align-items-center p-3 bg-danger bg-opacity-10">
                                <div class="flex-shrink-0 me-3">
                                    @if (!string.IsNullOrEmpty(food.ResimYolu))
                                    {
                                        <img src="~/images/foods/@food.ResimYolu" class="rounded grayscale" width="50" height="50" style="object-fit: cover; filter: grayscale(100%); opacity: 0.7;" alt="@food.Ad">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted" style="width: 50px; height: 50px;">
                                            <i class="bi bi-x-circle fs-4 text-danger"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold text-danger">@food.Ad</h6>
                                    <small class="text-danger text-opacity-75">
                                        İçerdiği Alerjenler: 
                                        @string.Join(", ", food.FoodAllergies.Where(fa => client.UserAllergies.Any(ua => ua.AllergyId == fa.AllergyId)).Select(fa => fa.Allergy.Ad))
                                    </small>
                                </div>
                                <span class="badge bg-danger text-white rounded-pill">Yasaklı</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center p-5 text-muted">
                        <i class="bi bi-emoji-smile fs-1 mb-2 d-block text-success"></i>
                        Riskli besin bulunamadı.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .sidebar, .top-header, .btn-outline-primary, .breadcrumb {
            display: none !important;
        }
        .main-content {
            margin: 0 !important;
            padding: 0 !important;
        }
        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
        }
    }
</style>
