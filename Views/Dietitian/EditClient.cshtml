@model NutriSmart.Models.User
@{
    ViewData["Title"] = "Danışan Düzenle";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-action="Index">Diyetisyen Paneli</a></li>
                <li class="breadcrumb-item"><a asp-action="Clients">Danışanlar</a></li>
                <li class="breadcrumb-item active">Düzenle</li>
            </ol>
        </nav>
        <h1 class="fw-bold mb-0">Danışan Bilgilerini Düzenle</h1>
    </div>
    <a asp-action="ClientDetails" asp-route-id="@Model.Id" class="btn btn-outline-secondary rounded-pill">
        <i class="bi bi-arrow-left me-2"></i>Geri
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="EditClient" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Ad" class="form-label fw-medium">Ad</label>
                            <input asp-for="Ad" class="form-control" placeholder="Ad" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Soyad" class="form-label fw-medium">Soyad</label>
                            <input asp-for="Soyad" class="form-control" placeholder="Soyad" />
                            <span asp-validation-for="Soyad" class="text-danger small"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Email" class="form-label fw-medium">E-posta</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <small class="text-muted">E-posta adresi değiştirilemez.</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Boy" class="form-label fw-medium">Boy (cm)</label>
                            <input asp-for="Boy" type="number" step="0.1" class="form-control" placeholder="175" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Kilo" class="form-label fw-medium">Kilo (kg)</label>
                            <input asp-for="Kilo" type="number" step="0.1" class="form-control" placeholder="70" />
                        </div>
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-check2 me-2"></i>Kaydet
                        </button>
                        <a asp-action="ClientDetails" asp-route-id="@Model.Id" class="btn btn-outline-secondary rounded-pill">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
