@model IEnumerable<NutriSmart.Models.Food>
@{
    ViewData["Title"] = "Besin Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold mb-1">Besin Yönetimi</h1>
        <p class="text-muted">Sistemdeki besin kayıtlarını yönetin.</p>
    </div>
    <div class="d-flex gap-2">
        <form asp-action="FixImagePaths" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-warning rounded-pill" title="Görsel Yollarını Onar">
                <i class="bi bi-tools me-2"></i>Onar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left me-2"></i>Geri
        </a>
        <a asp-action="CreateFood" class="btn btn-primary rounded-pill">
            <i class="bi bi-plus-lg me-2"></i>Yeni Besin
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-basket-x fs-1 text-muted"></i>
        <p class="text-muted mt-3">Henüz besin kaydı bulunmuyor.</p>
        <a asp-action="CreateFood" class="btn btn-primary rounded-pill mt-2">
            <i class="bi bi-plus-lg me-2"></i>İlk Besini Ekle
        </a>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 py-3 px-4">Besin Adı</th>
                        <th class="border-0 py-3">Kalori</th>
                        <th class="border-0 py-3">Alerjenler</th>
                        <th class="border-0 py-3 text-end px-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var food in Model)
                    {
                        <tr>
                            <td class="py-3 px-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="icon-circle bg-success bg-opacity-10 text-success" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                                        <i class="bi bi-egg-fried"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold">@food.Ad</h6>
                                        @if (!string.IsNullOrEmpty(food.Icerik))
                                        {
                                            <small class="text-muted">@(food.Icerik.Length > 50 ? food.Icerik.Substring(0, 50) + "..." : food.Icerik)</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="py-3">
                                <span class="badge bg-primary bg-opacity-10 text-primary">@food.Kalori kcal</span>
                            </td>
                            <td class="py-3">
                                @if (food.FoodAllergies.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var fa in food.FoodAllergies)
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-warning">@fa.Allergy.Ad</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>
                            <td class="py-3 px-4 text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="EditFood" asp-route-id="@food.Id" class="btn btn-sm btn-outline-primary rounded-pill">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteFood" asp-route-id="@food.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu besini silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
