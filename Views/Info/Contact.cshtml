@{
    ViewData["Title"] = "İletişim";
}

<div class="row justify-content-center fade-in">
    <div class="col-lg-10">
        <div class="card border-0 shadow-lg overflow-hidden">
            <div class="row g-0">
                <!-- Info Section -->
                <div class="col-md-5 bg-gradient-custom text-white p-5">
                    <h3 class="fw-bold text-white mb-4">Bize Ulaşın</h3>
                    <p class="mb-5">Sorularınız, önerileriniz veya işbirliği teklifleriniz için bizimle iletişime geçmekten çekinmeyin.</p>
                    
                    <div class="d-flex align-items-center mb-4">
                        <div class="fs-4 me-3"><i class="bi bi-geo-alt-fill"></i></div>
                        <div>
                            <h6 class="fw-bold text-white mb-0">Adres</h6>
                            <small>Teknoloji Vadisi, No: 123, İstanbul</small>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-4">
                        <div class="fs-4 me-3"><i class="bi bi-envelope-fill"></i></div>
                        <div>
                            <h6 class="fw-bold text-white mb-0">E-Posta</h6>
                            <small>info@nutrismart.com</small>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-5">
                        <div class="fs-4 me-3"><i class="bi bi-telephone-fill"></i></div>
                        <div>
                            <h6 class="fw-bold text-white mb-0">Telefon</h6>
                            <small>+90 (212) 555 0123</small>
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <!-- Form Section -->
                <div class="col-md-7 p-5 bg-white">
                    <h3 class="fw-bold text-primary-custom mb-4">Mesaj Gönderin</h3>
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label text-muted small">Adınız</label>
                                <input type="text" class="form-control" id="name" placeholder="Adınız">
                            </div>
                            <div class="col-md-6">
                                <label for="surname" class="form-label text-muted small">Soyadınız</label>
                                <input type="text" class="form-control" id="surname" placeholder="Soyadınız">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label text-muted small">E-Posta Adresi</label>
                            <input type="email" class="form-control" id="email" placeholder="ornek@email.com">
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label text-muted small">Konu</label>
                            <select class="form-select" id="subject">
                                <option selected>Seçiniz...</option>
                                <option value="1">Genel Bilgi</option>
                                <option value="2">Teknik Destek</option>
                                <option value="3">İşbirliği</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="message" class="form-label text-muted small">Mesajınız</label>
                            <textarea class="form-control" id="message" rows="4" placeholder="Mesajınızı buraya yazın..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
