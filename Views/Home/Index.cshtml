@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section with Carousel -->
<div id="heroCarousel" class="carousel slide mb-5 border-0 rounded-4 shadow-lg overflow-hidden" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active" style="height: 500px;">
            <img src="~/images/carousel/slide1.png" class="d-block w-100 h-100" alt="Healthy Food" style="object-fit: cover; filter: brightness(0.7);">
            <div class="carousel-caption d-none d-md-block text-start mb-5 pb-5">
                <h1 class="display-3 fw-bold text-white mb-3">Sağlıklı Yaşam <br /><span class="text-warning">NutriSmart ile Başlar</span></h1>
                <p class="lead text-white-50 w-50">Kişiselleştirilmiş beslenme planları ve uzman desteğiyle hedeflerinize ulaşmak artık çok daha kolay.</p>
                <a asp-controller="Info" asp-action="About" class="btn btn-primary btn-lg mt-3 px-5 rounded-pill">Keşfetmeye Başla</a>
            </div>
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item" style="height: 500px;">
            <img src="~/images/carousel/slide2.png" class="d-block w-100 h-100" alt="Fitness" style="object-fit: cover; filter: brightness(0.7);">
            <div class="carousel-caption d-none d-md-block text-center mb-5 pb-5">
                <h1 class="display-3 fw-bold text-white mb-3">Sınırlarını <span class="text-info">Zorla</span></h1>
                <p class="lead text-white-50">Sporcu beslenmesi ve performans artırıcı programlarımızla potansiyelini açığa çıkar.</p>
                <a asp-controller="Info" asp-action="Contact" class="btn btn-outline-light btn-lg mt-3 px-5 rounded-pill">Bize Ulaşın</a>
            </div>
        </div>
        <!-- Slide 3 -->
        <div class="carousel-item" style="height: 500px;">
            <img src="~/images/carousel/slide3.png" class="d-block w-100 h-100" alt="Nutrition" style="object-fit: cover; filter: brightness(0.7);">
            <div class="carousel-caption d-none d-md-block text-center mb-5 pb-5">
                <h1 class="display-3 fw-bold text-white mb-3">Premium'a <span class="text-success">Geç</span></h1>
                <p class="lead text-white-50 d-inline-block">Diyetisyen desteği ve özel programlar için şimdi yükselt.</p>
                <br>
                <a href="#premium-upgrade" class="btn btn-light text-dark fw-bold btn-lg mt-3 px-5 rounded-pill">İncele</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>

<!-- Features Section -->
<div class="row text-center mb-5">
    <div class="col-lg-4 mb-4">
        <div class="p-4 bg-white rounded-4 shadow-sm h-100 hover-elevate">
            <div class="icon-circle bg-success bg-opacity-10 text-success mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                <i class="bi bi-basket3-fill fs-2"></i>
            </div>
            <h3 class="fw-bold mb-3">Akıllı Diyet Listeleri</h3>
            <p class="text-muted">Yapay zeka destekli algoritmalarımızla size en uygun besinleri seçiyoruz.</p>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="p-4 bg-white rounded-4 shadow-sm h-100 hover-elevate">
            <div class="icon-circle bg-primary bg-opacity-10 text-primary mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                <i class="bi bi-activity fs-2"></i>
            </div>
            <h3 class="fw-bold mb-3">Günlük Takip</h3>
            <p class="text-muted">Kalori, su ve egzersiz takibini tek bir yerden kolayca yönetin.</p>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="p-4 bg-white rounded-4 shadow-sm h-100 hover-elevate">
            <div class="icon-circle bg-warning bg-opacity-10 text-warning mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                <i class="bi bi-people-fill fs-2"></i>
            </div>
            <h3 class="fw-bold mb-3">Topluluk Desteği</h3>
            <p class="text-muted">Benzer hedeflere sahip binlerce kişiyle etkileşime geçin ve motive olun.</p>
        </div>
    </div>
</div>

