@model NutriSmart.Models.Recipe

@{
    ViewData["Title"] = "Tarifi Düzenle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h3 class="fw-bold text-success"><i class="bi bi-pencil-square me-2"></i>Tarifi Düzenle</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="EklenmeTarihi" />
                        <input type="hidden" asp-for="IsDeleted" />

                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label fw-bold">Tarif Adı</label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Kategori" class="form-label fw-bold">Kategori</label>
                                <select asp-for="Kategori" class="form-select">
                                    <option value="Ana Yemek">Ana Yemek</option>
                                    <option value="Çorba">Çorba</option>
                                    <option value="Salata">Salata</option>
                                    <option value="Tatlı">Tatlı</option>
                                    <option value="Kahvaltı">Kahvaltı</option>
                                    <option value="Ara Öğün">Ara Öğün</option>
                                    <option value="İçecek">İçecek</option>
                                </select>
                                <span asp-validation-for="Kategori" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="KisiSayisi" class="form-label fw-bold">Kaç Kişilik</label>
                                <input asp-for="KisiSayisi" class="form-control" type="number" min="1" />
                                <span asp-validation-for="KisiSayisi" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label asp-for="HazirlamaSuresi" class="form-label fw-bold">Hazırlama (dk)</label>
                                <input asp-for="HazirlamaSuresi" class="form-control" type="number" min="0" />
                                <span asp-validation-for="HazirlamaSuresi" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PisirmeSuresi" class="form-label fw-bold">Pişirme (dk)</label>
                                <input asp-for="PisirmeSuresi" class="form-control" type="number" min="0" />
                                <span asp-validation-for="PisirmeSuresi" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Kalori" class="form-label fw-bold">Kalori (kcal/porsiyon)</label>
                                <input asp-for="Kalori" class="form-control" type="number" min="0" />
                                <span asp-validation-for="Kalori" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Malzemeler" class="form-label fw-bold">Malzemeler</label>
                            <textarea asp-for="Malzemeler" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Malzemeler" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Talimatlar" class="form-label fw-bold">Hazırlanışı</label>
                            <textarea asp-for="Talimatlar" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Talimatlar" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ResimYolu" class="form-label fw-bold">Resim Dosya Adı</label>
                            <input asp-for="ResimYolu" class="form-control" />
                             <div class="form-text">Şimdilik sadece sunucuda var olan resim isimlerini giriniz.</div>
                            <span asp-validation-for="ResimYolu" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill fw-bold py-2">Güncelle</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">İptal</a>
                        </div>
                    </form>
                    
                    <div class="mt-4 pt-4 border-top">
                        <h5 class="text-danger fw-bold fs-6">Tehlikeli Bölge</h5>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Bu tarifi silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash me-1"></i>Tarifi Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
