@model NutriSmart.Models.User

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                <div class="d-flex align-items-center">
                    <a asp-action="Index" class="btn btn-light rounded-circle me-3"><i class="bi bi-arrow-left"></i></a>
                    <h4 class="fw-bold mb-0 text-primary">Kullanıcı Düzenle</h4>
                </div>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ProfilResmi" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Ad" class="form-label fw-bold text-muted small">AD</label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Soyad" class="form-label fw-bold text-muted small">SOYAD</label>
                            <input asp-for="Soyad" class="form-control" />
                            <span asp-validation-for="Soyad" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label asp-for="Email" class="form-label fw-bold text-muted small">E-POSTA ADRESİ</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control border-start-0 ps-0" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mt-3">
                         <label asp-for="Sifre" class="form-label fw-bold text-muted small">YENİ ŞİFRE (Opsiyonel)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                            <input asp-for="Sifre" type="password" value="" class="form-control border-start-0 ps-0" placeholder="Değiştirmek için yazın..." />
                        </div>
                         <small class="text-muted">Şifreyi değiştirmek istemiyorsanız boş bırakın.</small>
                        <span asp-validation-for="Sifre" class="text-danger small"></span>
                    </div>

                    <div class="mt-3">
                        <label asp-for="Rol" class="form-label fw-bold text-muted small">KULLANICI ROLÜ</label>
                        <select asp-for="Rol" class="form-select" asp-items="Html.GetEnumSelectList<NutriSmart.Models.UserRole>()"></select>
                        <span asp-validation-for="Rol" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-warning text-white py-3 fw-bold rounded-pill">
                            <i class="bi bi-save me-2"></i> DEĞİŞİKLİKLERİ KAYDET
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
