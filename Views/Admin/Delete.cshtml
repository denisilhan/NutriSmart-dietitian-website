@model NutriSmart.Models.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="mb-4 text-danger bg-danger bg-opacity-10 p-4 rounded-circle d-inline-block" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-exclamation-triangle-fill display-4"></i>
                </div>
                
                <h3 class="fw-bold text-dark mb-2">Emin misiniz?</h3>
                <p class="text-muted mb-4">
                    <strong class="text-dark">@Model.Ad @Model.Soyad</strong> adlı kullanıcıyı silmek üzeresiniz.
                    <br>Bu işlem geri alınamaz (ancak veritabanında saklanır).
                </p>

                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-light rounded-pill px-4 fw-bold">İptal</a>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">
                            <i class="bi bi-trash-fill me-2"></i> Evet, Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
