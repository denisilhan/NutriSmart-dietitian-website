@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - NutriSmart</title>
    
    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1543362906-ac1b48263852?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        
        .overlay {
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.4); /* Dark overlay */
            backdrop-filter: blur(5px);
            z-index: 0;
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            background: rgba(255, 255, 255, 0.95); /* Glass effect */
            padding: 3rem;
            border-radius: var(--radius-lg);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            position: relative;
            z-index: 1;
        }
        .brand-logo {
            color: var(--primary-color);
            font-size: 2.2rem;
            font-weight: 800;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: -1px;
        }

        /* Dark Mode Support */
        [data-theme="dark"] .login-card {
            background: rgba(33, 37, 41, 0.95);
            color: #f8f9fa;
        }
        [data-theme="dark"] .form-label {
            color: #adb5bd !important;
        }
        [data-theme="dark"] .text-muted {
            color: #6c757d !important;
        }
        [data-theme="dark"] .input-group-text, 
        [data-theme="dark"] .form-control {
            background-color: #2b3035;
            border-color: #495057;
            color: #f8f9fa;
        }
        [data-theme="dark"] .input-group-text i {
            color: #adb5bd;
        }
    </style>
</head>
<body>
    <div class="overlay"></div>
    <div class="login-card fade-in position-relative">
        <a href="/" class="position-absolute top-0 start-0 m-3 text-muted text-decoration-none small">
            <i class="bi bi-arrow-left"></i> Ana Sayfa
        </a>
        <div class="brand-logo">
            <i class="bi bi-heart-pulse-fill"></i> NutriSmart
        </div>
        
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center mb-4">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="email" class="form-label text-muted small fw-bold">E-Posta Adresi</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control border-start-0 ps-0" id="email" name="email" placeholder="ornek@email.com" required>
                </div>
            </div>
            
            <div class="mb-4">
                <label for="password" class="form-label text-muted small fw-bold">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control border-start-0 ps-0" id="password" name="password" placeholder="******" required>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold mb-3 rounded-pill">Giriş Yap</button>
            
            <div class="text-center">
                <a href="#" class="text-decoration-none small text-muted">Şifremi Unuttum?</a>
            </div>
             <div class="text-center mt-3 border-top pt-3">
                 <span class="text-muted small">Hesabınız yok mu?</span>
                 <a asp-action="Register" class="text-decoration-none small fw-bold ms-1">Hemen Kaydol</a>
            </div>
             <div class="text-center mt-3">
                 <small class="text-muted">Deneme İçin: admin@nutri.com / Admin123!</small>
            </div>
        </form>
    </div>

    <script>
        // Apply theme immediately to avoid flash
        if (localStorage.getItem('theme') === 'dark') {
            document.body.setAttribute('data-theme', 'dark');
        }
    </script>
</body>
</html>
