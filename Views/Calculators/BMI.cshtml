@{
    ViewData["Title"] = "BKİ Hesaplama";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-light rounded-circle me-3"><i class="bi bi-arrow-left"></i></a>
            <h2 class="fw-bold m-0">Vücut Kitle Endeksi</h2>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="BMI" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Boy (cm)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-rulers"></i></span>
                                <input type="number" name="height" class="form-control" placeholder="175" value="@ViewBag.Height" required min="50" max="300">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Kilo (kg)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-speedometer"></i></span>
                                <input type="number" name="weight" class="form-control" placeholder="70" value="@ViewBag.Weight" required min="20" max="300">
                            </div>
                        </div>
                        <div class="col-12 mt-4">
                            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">HESAPLA</button>
                        </div>
                    </div>
                </form>

                @if (ViewBag.Result != null)
                {
                    <div class="mt-4 pt-4 border-top text-center fade-in">
                        <div class="small text-muted mb-1">SONUÇ</div>
                        <div class="display-4 fw-bold text-primary mb-2">@ViewBag.Result</div>
                        
                        @{
                            string statusColor = ViewBag.Status == "Zayıf" ? "text-warning" :
                                                ViewBag.Status == "Normal" ? "text-success" :
                                                ViewBag.Status == "Fazla Kilolu" ? "text-warning" : "text-danger";
                        }
                        
                        <div class="fs-4 fw-bold @statusColor">@ViewBag.Status</div>
                        <p class="text-muted mt-2">Vücut kitle indeksiniz bu aralıkta.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
